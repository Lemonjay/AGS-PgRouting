<UserControl x:Class="BaseMap.CustomPushpin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid Name="LayoutRoot" >
        <StackPanel Name="lblCarName"></StackPanel>
        <Grid Name="PushpinBase">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="PinScaleTransform" ScaleX="1" ScaleY="1" />
                    <RotateTransform x:Name="RotateTransform" ></RotateTransform>
                </TransformGroup>
            </Grid.RenderTransform>
        </Grid>
    </Grid>
</UserControl>
